{% extends 'reset_password/base.html.twig' %}

{% block title %}InetSCHOOLS - Changer mot de passe{% endblock %}

{% block body_content %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Changer votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrer votre email et nous vous enverrons un lien par lequel vous modifierai votre mot de passe.
            </small>
        </div>
        <br>
        <button class="btn btn-primary">Envoyer le lien par email</button>
		<br>
		<p class="p-3 text-center"><a href="{{ path('app_login') }}">Se connecter</a>.</p>
    {{ form_end(requestForm) }}
{% endblock %}