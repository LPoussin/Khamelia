{% block body %}
<div class="row">
    <div class="col-md-6 col-lg-12 col-xl-6">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="{{ path('classe_index', {'id_enseigne' : id_enseigne}) }}" class="">
                        <button class="mb-xs mt-xs mr-xs btn btn-primary">
                            Retour
                        </button>
                    </a>
                    <a href="#" class="fa fa-caret-down"></a>
                    
                </div>
        
                <h2 class="panel-title">
                  Edition de la classe
                </h2>
                
            </header>
            <div class="panel-body">
               <form action="{{ path('classe_edit', {'id': classe.id }) }} " class="form-horizontal" method="post">
               		<div class="form-group">
               			<label class="col-md-3 control-label" for="niveau">Niveau</label>
							<select name="niveau" id="niveau" class="col-md-6">
							  {% if typeEnseigneConcerned is not null %}
								{% for item in typeEnseigneConcerned.niveauxEtudes %}
									<option value="{{ item.id }}"
										{% if classe.niveau.id == item.id %} selected{% endif %}
									>{{ item.libelle }}</option>
									}
								{% endfor %}
							   {% else %}
							   		<option value="">Rien à afficher</option>
							   {% endif %}
							</select>
               		</div>
               		{% if typeEnseigneConcerned is not null and typeEnseigneConcerned.serie %}
               			<div class="form-group">
	               			<label class="col-md-3 control-label" for="serie">Série</label>
								<select name="serie" id="serie" class="col-md-6">
									{% for serie in series %}
										<option value="{{ serie.id }}"
											{% if classe.serie.id == serie.id %} selected{% endif %}
										>{{ serie.libelle }}</option>
									{% endfor %}
								</select>
	               		</div>
               		{% endif %}
               		<div class="form-group">
               			<label class="col-md-3 control-label" for="prof_princ">Professeur Principal</label>
						<select name="prof_princ" id="prof_princ" class="col-md-6">
							{% for resultat in resultatUser %}
								<option value="{{ resultat.id }}"
									{% if classe.professeurPrincipale.id == resultat.id %} selected{% endif %}
								>{{ resultat.nom }} {{ resultat.prenom }}</option>
							{% endfor %}
						</select>
               		</div>
               		<div class="form-group">
               			<label class="col-md-3 control-label" for="libelle">Libelle</label>
               			<div class="col-md-6">
                  			<input type="text" class="form-control" value="{{ classe.libelle}}" name="libelle" id="libelle">
               			</div>
               		</div>
               		
               			<input type="hidden" value="{{ csrf_token('edit-classe') }}" name="_token">
               			<input type="submit" value="Valider" class="mb-xs mt-xs mr-xs btn btn-success">
               </form>
            </div>
        </section>
    </div>
</div>

