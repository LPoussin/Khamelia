{% extends 'bal/base.html.twig' %}

{% block content_body %}
<section role="main" class="content-body">
<section class="content-with-menu content-with-menu-has-toolbar mailbox">
<div class="content-with-menu-container" data-mailbox data-mailbox-view="compose">
<div class="inner-body">
        <div class="inner-toolbar clearfix">
            <ul>
                <li>
                   <a href="{{ path('bal') }}"><i class="fa fa-times mr-sm"></i> {{"Abandonner"}}</a>
                </li>
            </ul>
        </div>
        <div class="mailbox-compose">

        	{{ form_start(form,{'attr':{'class':'form-horizontal form-bordered form-bordered'}}) }}
        		<span class="text-danger">{{error}}</span>
                    <div class="form-group form-group-invisible">
                            <div class="compose">
                            	{{form_widget(form.subject,{'attr':{'class':'form-control-invisible','data-tag-class':'label label-primary','placeholder':'Sujet de discussion'}})}}
                            </div>
                    </div>

                    <div class="form-group form-group-invisible">
                            <label for="cc" class="control-label-invisible">Dest</label>
                            <div class="col-sm-offset-2 col-sm-9 col-md-offset-1 col-md-10">
                                {{form_widget(form.destinataires,{'attr':{'class':'select2'}})}}
                            </div>
                    </div>

                    <div class="form-group form-group-invisible">
                            <label for="cc" class="control-label-invisible">Dest groupe:</label>
                            <div class="col-sm-offset-2 col-sm-9 col-md-offset-1 col-md-10">
                                {{form_widget(form.destinatairegroupes,{'attr':{'class':'select2'}})}}
                            </div>
                    </div>

                    <div class="form-group">
                            <div class="compose">
                            	{{form_widget(form.message,{'attr':{'class':'form-control-invisible compose-control','id':'compose-field','placeholder':'Rediger votre message...'}})}}
                            </div>
                    </div>

                    <div class="form-group">
                    	<label for="cc" class="control-label-invisible">Joindre fichier</label>
                            <div class="compose">
                            	{{form_widget(form.f,{'attr':{'class':'form-control-invisible compose-control'}})}}
                            </div>
                    </div>
                    {{form_errors(form)}}
                    <div class="form-group"><span class="text-danger">{{error}}</span></div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">{{"Envoyer"}}</button>
                    </div>
                    {{form_row(form._token)}}
                </form>
            {{ form_end(form) }}

        </div>
    </div>
</div>
</section>
</section>
{% endblock %}
